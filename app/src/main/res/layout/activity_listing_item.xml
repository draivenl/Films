<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_cardview"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="16dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/listing_item_image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/avengers"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/listing_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listing_item_name_hint"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

                />
            <TextView
                android:id="@+id/listing_item_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/listing_item_genre_hint"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                />
            <LinearLayout
                android:id="@+id/listing_item_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                />





        </LinearLayout>
    </LinearLayout>




</android.support.v7.widget.CardView>